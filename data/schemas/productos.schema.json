{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["id","slug","nombre","precio","estado"],
    "properties": {
      "id": {"type":"string"},
      "slug": {"type":"string"},
      "nombre": {"type":"string"},
      "precio": {"type":"string"},
      "moneda": {"type":"string"},
      "imagenes": {"type":"array","items":{"type":"string"}},
      "stock": {"type":"integer","minimum":0},
      "estado": {"type":"string"},
      "descripcion": {"type":"string"}
    },
    "additionalProperties": false
  }
}
